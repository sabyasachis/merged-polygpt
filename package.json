{
  "name": "polygpt",
  "version": "0.2.5",
  "description": "Mirror text to ChatGPT and Gemini simultaneously",
  "author": {
    "name": "Nathan Cavaglione",
    "email": "nathan@polygpt.app"
  },
  "main": "src/main/index.js",
  "homepage": "./",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder"
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.polygpt.app",
    "productName": "PolyGPT",
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "src/**/*",
      "config/**/*",
      "assets/**/*",
      "package.json"
    ],
    "mac": {
      "icon": "assets/icons/icon.icns",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "target": [
        {
          "target": "dmg",
          "arch": ["universal"]
        }
      ]
    },
    "win": {
      "icon": "assets/icons/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "icon": "assets/icons/no_text.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  }
}
